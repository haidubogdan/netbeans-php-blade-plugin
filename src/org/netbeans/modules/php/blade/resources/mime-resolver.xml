<!DOCTYPE MIME-resolver PUBLIC
          "-//NetBeans//DTD MIME Resolver 1.0//EN" 
          "http://www.netbeans.org/dtds/mime-resolver-1_0.dtd">
<MIME-resolver>
    <file>
        <!-- Ignore files with following extensions. -->
        <ext name="xml"/>
        <ext name="json"/>
        <ext name="html"/>
        <exit/>
    </file>
    <file>
        <name name=".blade.php" substring="true">
            <resolver mime="text/x-blade"/>
        </name>
    </file>
    <file>
        <!-- Ignore files with following extensions. -->
        <ext name="xml"/>
        <ext name="json"/>
        <ext name="html"/>
        <exit/>
    </file>
</MIME-resolver>